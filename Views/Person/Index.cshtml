@model IEnumerable<DynamoDbCrudApi.Models.Person>

<h1>Person List</h1>

<p>
    <a href="/Person/Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>
                    <a href="/Person/Edit/@item.Id">Edit</a> |
                    <a href="/Person/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
